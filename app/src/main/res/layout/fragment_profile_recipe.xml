<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50px"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/colorLightLimeGreen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Total Extraction"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/labelTextSize"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlack"
            ></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <Spinner
                android:id="@+id/spinner_total_extraction"
                android:layout_height="48dp"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorBlack"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Temperature"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/labelTextSize"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlack"
            ></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <Spinner
                android:id="@+id/spinner_temperature"
                android:layout_height="48dp"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorBlack" />
        </RelativeLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorDarkBlue"
            android:elevation="10dp"
            android:text="Back"
            android:textSize="@dimen/labelTextSize"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toStartOf="@+id/btn_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorDarkBlue"
            android:elevation="10dp"
            android:text="Next"
            android:pointerIcon="arrow"
            android:textSize="@dimen/labelTextSize"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>